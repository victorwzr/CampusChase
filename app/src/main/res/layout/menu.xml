<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgm1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="69dp"
            android:scaleType="matrix"
            app:srcCompat="@android:drawable/btn_dialog" />

        <Button
            android:id="@+id/btn_ct"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/imgm1"
            android:layout_alignStart="@+id/imgm1"
            android:layout_below="@+id/imgm1"
            android:layout_marginTop="116dp"
            android:background="@drawable/btn_team"
            android:text="Create Team"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_jt"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/btn_team"
            android:text="Join Team"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_below="@+id/btn_ct"
            android:layout_alignLeft="@+id/btn_ct"
            android:layout_alignStart="@+id/btn_ct" />

    </RelativeLayout>
</LinearLayout>
